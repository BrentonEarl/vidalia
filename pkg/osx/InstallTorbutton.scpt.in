try
  set p to path to me
  set p to POSIX path of p
  do shell script "open -a Firefox " & quoted form of p & "@TORBUTTON_XPI_FILENAME@"
on error errStr
  display dialog 
    "We were unable to install Torbutton. Please make sure Firefox is installed and try again."
    buttons {"OK"}
end try

